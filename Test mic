import speech_recognition as sr

def test_microphone():
    r = sr.Recognizer()
    with sr.Microphone() as source:
        print("Say something...")
        # Reduce background noise
        r.adjust_for_ambient_noise(source)
        audio = r.listen(source)
    
    try:
        print("You said: " + r.recognize_google(audio))
    except Exception as e:
        print("Error: " + str(e))

test_microphone()
